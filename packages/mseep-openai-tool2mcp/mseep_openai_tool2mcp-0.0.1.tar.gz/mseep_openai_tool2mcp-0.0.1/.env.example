# OpenAI Tool2MCP Configuration

# Required: Your OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Tool Configuration
# Possible values: web_search, code_interpreter, browser, file_manager
# Comma-separated list, leave empty to enable all tools
ENABLED_TOOLS=

# Request Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Logging Configuration
# Possible values: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
