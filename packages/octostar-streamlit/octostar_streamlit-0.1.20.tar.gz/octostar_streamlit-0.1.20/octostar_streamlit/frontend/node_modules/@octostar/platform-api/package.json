{
  "name": "@octostar/platform-api",
  "version": "0.5.8",
  "description": "Provides access to the API exposed by Octostar platform to an application run in an iframe",
  "keywords": [
    "octostar",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "",
    "directory": "packages/octostar-platform-api"
  },
  "license": "MIT",
  "author": "",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@types/uuid": "^9.0.2",
    "post-robot": "^10.0.46",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "@octostar/platform-types": "0.5.8"
  },
  "peerDependencies": {
    "@octostar/platform-types": "^0.5.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "browserify": "browserify dist/index.js -s octostar -t [ babelify --presets [@babel/preset-env] ]  -o dist/octostar-platform-api.js",
    "build": "pnpm run clean && pnpm run compile && pnpm run browserify",
    "clean": "rimraf ./dist ./temp ./.turbo tsconfig.tsbuildinfo",
    "compile": "tsc",
    "dev": "tsc -b -w"
  }
}