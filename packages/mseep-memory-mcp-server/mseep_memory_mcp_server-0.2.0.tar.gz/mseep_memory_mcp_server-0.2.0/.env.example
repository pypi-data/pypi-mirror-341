CACHE_TTL=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=memory_mcp_server.log

# Performance Settings
BATCH_SIZE=1000
INDEX_CACHE_SIZE=10000

# Development Settings
DEBUG=false
TESTING=false
BENCHMARK_MODE=false
