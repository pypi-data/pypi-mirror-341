# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-org-id-here  # Optional

# Multi-LLM Strategy Configuration 
# (Set the priority order for fallback, comma-separated)
LLM_PROVIDERS=openai,anthropic,local
ANTHROPIC_API_KEY=your-anthropic-api-key-here  # Optional
# Path to local models (for llm-mlx)
LLM_LOCAL_MODEL_PATH=path/to/your/local/model  # Optional

# Database Configuration
SQLITE_DB_PATH=data/agent_memory.db  # Default path for SQLite database
DATASETTE_PORT=8001  # Port for Datasette web interface

# RAG Configuration
VECTOR_STORE_TYPE=sqlite  # Options: sqlite, faiss
VECTOR_DB_PATH=data/vector_store.db

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=logs/agent.log  # Default path for log file

# GUI Configuration
TAURI_WINDOW_TITLE=LlamaSearch Product Growth
TAURI_WINDOW_WIDTH=1200
TAURI_WINDOW_HEIGHT=800
TAURI_DEV_SERVER_PORT=3000  # Port for Next.js dev server

# Advanced Features
ENABLE_AGENT_MEMORY=true  # Enable/disable persistent agent memory
ENABLE_MLX_ACCELERATION=auto  # auto, true, false
ENABLE_OPEN_INTERPRETER=false  # Enable/disable Open Interpreter integration

# Security
ALLOWED_TOOLS=search,read,write,fetch  # Comma-separated list of allowed agent tools 