from python:3.8-slim
ENV DEBIAN_FRONTEND=noninteractive
# Install gcc for binary compile  & rustup for rust
RUN apt-get update && \
    apt-get install --no-install-recommends -y curl gcc gcc-multilib && \
    curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"
RUN pip3 install --no-cache-dir uv maturin

